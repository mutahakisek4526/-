<Window x:Class="AacV1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:AacV1.VM"
        xmlns:views="clr-namespace:AacV1.Views"
        Title="AacV1" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:HomeViewModel}">
            <views:HomeView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:KanaBoardViewModel}">
            <views:KanaBoardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PhraseViewModel}">
            <views:PhraseView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SupporterViewModel}">
            <views:SupporterView />
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ContentControl Content="{Binding Current}" />
    </Grid>
</Window>
